# LLM Configuration for AI Recommendations
# Choose your LLM provider: "openai" or "gemini"
LLM_PROVIDER=gemini

# For OpenAI (get from https://platform.openai.com/api-keys)
# LLM_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-3.5-turbo

# For Google Gemini (get from https://aistudio.google.com/app/apikey)
LLM_API_KEY=your_gemini_api_key_here
LLM_MODEL=your_gemini_model_here

# Snowflake Configuration (optional)
SNOWFLAKE_ACCOUNT=your_snowflake_account_here
SNOWFLAKE_USERNAME=your_snowflake_username_here
SNOWFLAKE_PASSWORD=your_snowflake_password_here
SNOWFLAKE_WAREHOUSE=your_snowflake_warehouse_here
SNOWFLAKE_DATABASE=your_snowflake_database_here
SNOWFLAKE_SCHEMA=your_snowflake_schema_here

# Oracle Cloud Configuration (optional)
# Replace with your Oracle Cloud database details
# Connection string examples:
# Simple: host:port/service_name
# TNS: (description=(address=(protocol=tcps)(port=1522)(host=abc.adb.region.oraclecloud.com))(connect_data=(service_name=service_high.adb.oraclecloud.com))(security=(ssl_server_cert_dn="...")))
ORACLE_CONNECTION_STRING=your_oracle_connection_string_here
ORACLE_USERNAME=your_oracle_username_here
ORACLE_PASSWORD=your_oracle_password_here

# Oracle Cloud Wallet Configuration (for Autonomous Database)
# Leave empty for standard Oracle connections or if using connection string with security settings
ORACLE_WALLET_LOCATION=
ORACLE_WALLET_PASSWORD= 

HDFS_NAMENODE_URL=your_hdfs_namenode_url_here
HDFS_USERNAME=your_hdfs_username_here
HDFS_TIMEOUT=30